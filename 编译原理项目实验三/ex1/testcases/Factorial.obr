module sample;
	procedure test1 (var x : integer);
		var factorial_x : integer;
	begin
		factorial_x := 0;
		while x >= 0 do
			if x = 0 then 
				factorial_x := 0;
			else 
				factorial_x := x * factorial(x-1);
			end; 
		end;
		write(factorial_x); writeln
	end test1;

	procedure test2 (var x : integer);
